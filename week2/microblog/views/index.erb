<h1>Microblog</h1>

<a href="/new" class="btn btn-primary">Add post</a>

<% if tags.present? %>
    <h3>Tags</h3>
    <p>
        <% tags.each do |tag| %>
            <a href="/search/<%= tag %>" class="btn btn-link"><%= tag %></a>
        <% end %>
    </p>
<% end %>

<h3>Posts</h3>

<% if posts.present? %>
    <% posts.each do |post_id, post| %>
      <div class="panel">
            <div class="panel-heading">
                <div class="text-center">
                    <div class="row">
                        <div class="col-sm-9">
                            <a href="/<%= post_id %>"><h3 class="pull-left"><%= post.title %></h3></a>
                        </div>
                    </div>
                </div>
            </div>
                
            <div class="panel-body">
                <%= post.content %>
            </div>
            
            <div class="panel-footer tags">
                <% post.tags.each do |tag| %>
                    <span class="label label-default"><%= tag %></span>
                <% end %>
            </div>
        </div>
    <% end %>
<% else %>
    <p>No posts exist yet.</p>
<% end %>

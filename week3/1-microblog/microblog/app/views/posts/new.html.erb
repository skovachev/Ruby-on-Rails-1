<%= render '/back_button' %>

<h3>New blog post</h3>

<div class="row">
    <div class="col-md-5">
        <%= form_tag("/posts/create", method: "post") do %>

            <div class="panel panel-default">
                <div class="panel-body form-horizontal payment-form">
                    <div class="form-group">
                        <label for="post[title]" class="col-sm-3 control-label">Title</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="title" name="post[title]">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="post[content]" class="col-sm-3 control-label">Content</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" id="content" name="post[content]"></textarea>
                        </div>
                    </div> 
                    <div class="form-group last">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-default">
                                <span class="glyphicon glyphicon-plus"></span> Save post
                            </button>
                        </div>
                    </div>
                </div>
            </div>            
        <% end %>
    </div>
</div>
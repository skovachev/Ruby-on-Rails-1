<%= render '/back_button' %>

<h3>New lecture</h3>

<div class="row">
    <div class="col-md-5">
        <%= form_for @lecture, url: '/lectures' do |f| %>
        <% console %>
            <div class="panel panel-default">
                <div class="panel-body form-horizontal payment-form">
                    <div class="form-group <%= field_valid(:name, f) %>">
                        <label for="lecture[name]" class="col-sm-3 control-label">Name</label>
                        <div class="col-sm-9">
                            <%= f.text_field :name, class: 'form-control' %>
                            <%= field_error_message :name, f %>
                        </div>
                    </div>
                    <div class="form-group <%= field_valid(:description, f) %>">
                        <label for="lecture[description]" class="col-sm-3 control-label">Description</label>
                        <div class="col-sm-9">
                            <%= f.text_area :description, class: 'form-control' %>
                            <%= field_error_message :description, f %>
                        </div>
                    </div> 
                    <div class="form-group last">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-default">
                                <span class="glyphicon glyphicon-plus"></span> Save lecture
                            </button>
                        </div>
                    </div>
                </div>
            </div>            
        <% end %>
    </div>
</div>
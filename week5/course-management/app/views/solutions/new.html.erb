<%= render 'back_button' %>

<h3>New solution</h3>

<div class="row">
    <div class="col-md-5">
        <%= form_for [@lecture, @task, @solution] do |f| %>
            <div class="panel panel-default">
                <div class="panel-body form-horizontal">
                    <div class="form-group <%= field_valid(:body, f) %>">
                        <label for="lecture[body]" class="col-sm-3 control-label">Content</label>
                        <div class="col-sm-9">
                            <%= f.text_area :body, class: 'form-control' %>
                            <%= field_error_message :body, f %>
                        </div>
                    </div> 
                    <div class="form-group last">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-default">
                                <span class="glyphicon glyphicon-plus"></span> Save solution
                            </button>
                        </div>
                    </div>
                </div>
            </div>            
        <% end %>
    </div>
</div>
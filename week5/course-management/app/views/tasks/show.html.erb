<%= render 'back_button' %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class='panel-title'><%= @struct.task.name %></h3>        
    </div>
        
    <div class="panel-body">
        <%= @struct.task.description %>
    </div>

    <div class="panel-footer">
        <%= @struct.lecture.name %>
    </div>
</div>

<p>
    <%= form_tag(lecture_task_path(@struct.lecture, @struct.task), method: "delete") do %>
        <a href="<%= lecture_task_path(@struct.lecture, @struct.task) %>/edit" class="btn btn-xs btn-default">Edit</a>
        <button type='submit' class='btn btn-danger btn-xs'>Delete task</button>
    <% end %>
</p>
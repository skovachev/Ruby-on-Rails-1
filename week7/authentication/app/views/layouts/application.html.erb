<!DOCTYPE html>
<html>
<head>
  <title>Authentication</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice_ok] %>
    <div class="alert alert-success"><%= flash[:notice_ok] %></div>
<% end %>

<% if flash[:notice_err] %>
    <div class="alert alert-danger"><%= flash[:notice_err] %></div>
<% end %>

<%= yield %>

</body>
</html>
